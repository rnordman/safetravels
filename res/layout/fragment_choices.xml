<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
   

    <Button
        android:id="@+id/buttonsettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnsettings" />

    <Button
        android:id="@+id/buttonfilters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnfilters"
        android:layout_toRightOf="@+id/buttonsettings" />

    <Button
        android:id="@+id/buttonbackground"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnbackground"
        android:layout_toRightOf="@+id/buttonfilters" />

</RelativeLayout>
