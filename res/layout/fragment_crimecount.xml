<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textViewCrimeCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:text="@string/txtNoConnectPleaseWait"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/txtPrevLat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewCrimeCount"
        android:layout_below="@+id/textViewCrimeCount"
        android:layout_marginTop="50dp"
        android:text="Previous Latitude: " />

    <TextView
        android:id="@+id/txtPrevLong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtPrevLat"
        android:layout_below="@+id/txtPrevLat"
        android:text="Previous Longitude: " />

    
    <TextView
        android:id="@+id/txtCurrentLat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtPrevLong"
        android:layout_below="@+id/txtPrevLong"
        android:layout_marginTop="39dp"
        android:text="Current Lat: " />

    <TextView
        android:id="@+id/txtCurrentLong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtCurrentLat"
        android:layout_below="@+id/txtCurrentLat"
        android:text="Current Long: " />

</RelativeLayout>
