<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent">


	<LinearLayout android:id="@+id/fragmentcontainertop"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:orientation="horizontal" />
	
	<LinearLayout android:id="@+id/fragmentcontainermid"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:orientation="horizontal"
		 android:layout_below="@+id/fragmentcontainertop"
		 android:layout_above="@+id/fragmentcontainerbottom"
		 />
	
 	<LinearLayout android:id="@+id/fragmentcontainerbottom"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_alignParentBottom="true"/> 



</RelativeLayout>

